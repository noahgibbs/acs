<h1>Listing worlds</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Author name</th>
    <th>Author email</th>
    <th>Name</th>
    <th>Is Default</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @worlds.each do |world| %>
  <tr>
    <td><%= world.description %></td>
    <td><%= world.author_name %></td>
    <td><%= world.author_email %></td>
    <td><%= world.name %></td>
    <td><%= world.is_default %></td>
    <td><%= link_to 'Show', world %></td>
    <td><%= link_to 'Edit', edit_world_path(world) %></td>
    <td><%= link_to 'Destroy', world, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

